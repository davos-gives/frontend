<form class="w-3/5">
  <div class="py-8">
    <FormInput @field={{"first name"}} />
    <FormInput @field={{"last name"}} />
    <FormInput @field={{"email"}} />
    <FormInput @field={{"password"}} @password={{true}} />
    <FormInput @field={{"confirm password"}} @password={{true}} />
    <div>
    </div>
    <div class="flex mt-8 pb-6 justify-end">
      <div class="flex flex-col">
        <button type="submit" name="button"
          class="rounded-full bg-purple-500 text-white font-semibold py-2 px-4 rounded-full text-center pb-3 hover:shadow-lg flex w-full justify-between items-center focus:outline-none focus:shadow-outline">Create
          Account <img src="/img/icons/ChevronWhite.svg" class="w-3 -rotate-90 transform" alt="continue"></button>
        <p type="submit" class="text-purple-500 px-6 py-4 hover:bg-grey-lightest rounded-lg text-xs">Already
          registered? <button class="font-semibold underline">Log in</button> here!</p>
      </div>
    </div>
  </div>
</form>