<div class="w-3/5">
  <div class="py-8">
    <FormInput @value={{@changeset.email}} @field={{"email"}} />
    <FormInput @value={{@changeset.password}} @field={{"password"}} @password={{true}} />
    <div>
    </div>
    <div class="flex mt-8 pb-6 justify-end">
      <div class="flex flex-col">
        <button type="submit" name="button"
          class="rounded-full bg-purple-500 text-white font-semibold py-2 px-4 rounded-full text-center pb-3 hover:shadow-lg flex w-full justify-between items-center focus:outline-none focus:shadow-outline {{if @changeset.isInvalid "opacity-50 cursor-not-allowed"}}"
          {{on "click" (fn @submit @changeset)}}>Log In <img src="/img/icons/ChevronWhite.svg"
            class="w-3 -rotate-90 transform" alt="continue"></button>
        <p type="submit" class="text-purple-500 px-6 py-4 hover:bg-grey-lightest rounded-lg text-xs">Forgot Password?
          <LinkTo @route={{"log-in"}} class="font-semibold underline">Reset Password</LinkTo> here!</p>
      </div>
    </div>
  </div>
</div>