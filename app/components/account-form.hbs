<div class="ml-12">
  <div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
    <div class="md:grid md:grid-cols-3 md:gap-6 mb-12">
      <div class="md:col-span-1">
        <h3 class="text-lg font-medium leading-6 text-gray-900">User</h3>
        <p class="mt-1 text-sm leading-5 text-gray-500">
          This is the information about your account.
        </p>
      </div>
      <div class="mt-5 md:mt-0 md:col-span-2">
        <form action="#" method="POST">
          <div class="grid grid-cols-6 gap-6" {{did-insert this.validate this.user}}>
            <div class="col-span-6 sm:col-span-3">
              <label for="first_name" class="block text-sm font-medium leading-5 text-gray-700">First name</label>
              <Input id="first_name" @value={{this.user.fname}}
                class="mt-1 form-input block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" />
            </div>

            <div class="col-span-6 sm:col-span-3">
              <label for="last_name" class="block text-sm font-medium leading-5 text-gray-700">Last name</label>
              <Input id="last_name" @value={{this.user.lname}}
                class="mt-1 form-input block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" />
            </div>
            <div class="col-span-6 sm:col-span-3">
              <div class="col-span-3 sm:col-span-2">
                <label for="Email" class="block text-sm font-medium leading-5 text-gray-700">
                  Email
                </label>
                <div class="mt-1 flex rounded-md shadow-sm">
                  <Input id="Email Address" @value={{this.user.email}}
                    class="form-input flex-1 block w-full rounded-md transition duration-150 ease-in-out sm:text-sm sm:leading-5"
                    placeholder="" />
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>

    <div class="md:grid md:grid-cols-3 md:gap-6 mt-8 border-t border-gray-200 pt-12">
      <div class="md:col-span-1">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Organization</h3>
        <p class="mt-1 text-sm leading-5 text-gray-500">
          Information about your charitable organization
        </p>
      </div>
      <div class="mt-5 md:mt-0 md:col-span-2">
        <form action="#" method="POST">
          <div class="grid grid-cols-6 gap-6" {{did-insert this.validate this.organization}}>
            <div
              class="bg-white shadow-md bg-green-100 border-2 border-green-300 sm:rounded-lg col-span-6 sm:col-span-3 sm:col-start-1">
              <div class="px-4 py-5 sm:p-6">
                <h3 class="text-lg leading-6 font-medium text-green-900">
                  Active connection to your Nationbuilder account.
                </h3>
                <div class="mt-2 max-w-xl text-sm leading-5 text-green-700">
                  <p>
                    We require an authorized API key from your Nationbuilder account to tie transactions to
                    receipts.
                  </p>
                </div>
                <div class="mt-5 sm:flex sm:items-center">
                  <div class="max-w-xs w-full">
                    <label for="email" class="sr-only">Nation</label>
                    <div class="relative rounded-md shadow-sm">
                      <Input id="email" class="form-input block w-full sm:text-sm sm:leading-5"
                        @value={{this.organization.nationbuilderId}} />
                    </div>
                  </div>
                  <span class="mt-3 inline-flex rounded-md shadow-sm sm:mt-0 sm:ml-3 sm:w-auto">
                    <button type="button" {{on "click" this.reauthenticate}}
                      class="w-full inline-flex items-center justify-center px-4 py-2 border border-transparent font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition ease-in-out duration-150 sm:w-auto sm:text-sm sm:leading-5">
                      Connect
                    </button>
                  </span>
                </div>
              </div>
            </div>

            <div class="col-span-6 sm:col-span-6">
              <label for="first_name" class="block text-sm font-medium leading-5 text-gray-700">Organization
                Name</label>
              <Input id="first_name" @value={{this.organization.name}}
                class="mt-1 form-input block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" />
            </div>

            <div class="col-span-6 sm:col-span-3">
              <label for="last_name" class="block text-sm font-medium leading-5 text-gray-700">Registered Charitable
                Number</label>
              <Input id="last_name" @value={{this.organization.charitableNumber}}
                class="mt-1 form-input block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" />
            </div>

            <div class="col-span-6 sm:col-span-3">
              <label for="country" class="block text-sm font-medium leading-5 text-gray-700">Country /
                Region</label>
              <select id="country"
                class="mt-1 block w-full py-2 px-3 py-0 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5">
                <option>Canada</option>
                <option>United States</option>
              </select>
            </div>

            <div class="col-span-4">
              <label for="street_address" class="block text-sm font-medium leading-5 text-gray-700">Address
                1</label>
              <Input id="street_address" @value={{this.organization.address1}}
                class="mt-1 form-input block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" />
            </div>

            <div class="col-span-1">
              <label for="street_address" class="block text-sm font-medium leading-5 text-gray-700">Address
                2</label>
              <Input id="street_address" @value={{this.organization.address2}}
                class="mt-1 form-input block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" />
            </div>

            <div class="col-span-6 sm:col-span-6 lg:col-span-2">
              <label for="city" class="block text-sm font-medium leading-5 text-gray-700">City</label>
              <Input id="city" @value={{this.organization.city}}
                class="mt-1 form-input block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" />
            </div>

            <div class="col-span-6 sm:col-span-3 lg:col-span-2">
              <label for="state" class="block text-sm font-medium leading-5 text-gray-700">Province</label>
              <Input id="state" @value={{this.organization.province}}
                class="mt-1 form-input block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" />
            </div>

            <div class="col-span-6 sm:col-span-3 lg:col-span-2">
              <label for="postal_code" class="block text-sm font-medium leading-5 text-gray-700">Postal</label>
              <Input id="postal_code" @value={{organization.postalCode}}
                class="mt-1 form-input block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" />
            </div>

            <div class="col-span-6 sm:col-span-6 lg:col-span-2">
              <label for="city" class="block text-sm font-medium leading-5 text-gray-700">Phone Number</label>
              <Input id="city" @value={{this.organization.phone}}
                class="mt-1 form-input block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" />
            </div>

            <div class="col-span-6 sm:col-span-3 lg:col-span-2">
              <label for="state" class="block text-sm font-medium leading-5 text-gray-700">Email</label>
              <Input id="state" @value={{this.organization.email}}
                class="mt-1 form-input block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" />
            </div>

            <div class="col-span-6 sm:col-span-3 lg:col-span-2">
              <label for="postal_code" class="block text-sm font-medium leading-5 text-gray-700">Website</label>
              <Input id="postal_code" @value={{organization.website}}
                class="mt-1 form-input block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" />
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="mt-8 border-t border-gray-200 pt-5">
      <div class="flex justify-end">
        <span class="inline-flex rounded-md shadow-sm">
          <button type="button" {{on "click" this.rollback}}
            class="py-2 px-4 border border-gray-300 rounded-md text-sm leading-5 font-medium text-gray-700 hover:text-gray-500 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:bg-gray-50 active:text-gray-800 transition duration-150 ease-in-out">
            Cancel
          </button>
        </span>
        <span class="ml-3 inline-flex rounded-md shadow-sm">
          <button type="submit" {{on "click" this.save}}
            class="inline-flex justify-center py-2 px-4 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out {{if this.formInvalid "opacity-50 cursor-not-allowed"}}">
            Save
          </button>
        </span>
      </div>
    </div>
  </div>
</div>