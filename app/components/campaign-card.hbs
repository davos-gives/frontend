<div class="w-1/3">
  <div class={{if this.isEditing "editing-overlay"}}></div>

  {{!-- {{#if this.isEditing}}
  <p class="absolute text-white z-30 ml-8 pl-4 cursor-pointer block -mt-10" {{action "focusOff"}}
    data-test-id="go back">
    <img src="/img/icons/ChevronWhite.svg" class="w-4 rotate-90" alt="back">
    Go Back
  </p>
  {{/if}}

  {{#if this.isEditing}}
  <button class="rounded-full bg-yellow text-white font-thin py-2 px-4 rounded-full absolute z-30 block -mt-8"
    {{action "saveRecurring"}} style="margin-left: 346px;" data-test-id="save">Save</button>
  {{else}}
  {{#if updated}}
  <button class="rounded-full bg-green text-white font-thin py-2 px-4 rounded-full absolute block z-30 -mt-8"
    style="margin-left: 312px;">Updated!</button>
  {{/if}}
  {{/if}} --}}

  <div
    class="w-100 rounded-lg overflow-hidden shadow-md -mt-4 mx-2 mb-8 cursor-pointer bg-white {{if this.isEditing "z-20 relative"}}">
    {{#if @campaign.imageUrl}}
    <div class="image w-full h-48 bg-purple-card-background {{if this.isEditing "z-20 relative"}} overflow-hidden">
      <img src={{@campaign.imageUrl}} class="opacity-80 featured-image" alt="barks and meows shelter campaign"
        data-test-id="campaign image">
    </div>
    {{else}}
    <div class="w-full {{if this.isEditing "z-20 relative"}} flex text-yellow-400 overflow-hidden h-40"
      data-test-id="default image">
      {{svg-jar this.defaultImage class="object-cover fill-current h-full object-top -mt-1"}}
      {{!-- {{svg-jar this.defaultImage }} --}}
    </div>
    {{/if}}

    <div
      class="px-10 py-4 {{if this.isEditing "relative z-20"}} bg-white {{if this.updated "border-bottom-green" "mb-7px"}}">
      <div class="pb-8 border-grey-light border-solid border-b bg-white">
        <p class="font-bold text-gray-500 mt-4 capitalize text-lg" data-test-id="organization name">
          {{@campaign.name}}
        </p>
        <p class="font-light text-grey-card mb-4" data-test-id="campaign name">
          <span class="font-semibold text-grey-card">$100</span> / $100
        </p>
        <span class="text-left font-sm capitalize text-grey-card-2 pt-3" data-test-id="campaign frequency">
          {{@campaign.description}}
        </span>
      </div>
      <div class="mt-4 flex">
        <p
          class="text-2xl font-bold w-34 text-center {{if this.amountEdited "text-yellow" "text-grey-card"}} align-top -mt-2 amount">
        </p>
        <span class="text-left font-sm capitalize text-grey-card-2" data-test-id="campaign frequency">
          Default
        </span>
      </div>
    </div>
  </div>
</div>