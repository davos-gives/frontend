<div class="w-3/5 organization">
  <div class="py-8 relative">
    <FormInput @value={{@changeset.name}} @field={{"Charity Name"}} />
    <FormInput @value={{@changeset.address}} @field={{"Address"}} />
    <FormInput @value={{@changeset.charitableNumber}} @field={{"Registered Charitable Number"}} />
    <div id="nationbuilder" class="flex">
      <FormInput @value={{@changeset.nationId}} @field={{"Nation ID"}} @class="w-1/2" />
      <button
        class="ml-4 self-center py-2 text-white rounded-full border border-purple-500 bg-purple-500 px-4 rounded-full text-center text-sm float-right self-center mx-1">
        Connect
      </button>
    </div>

    {{!-- <FormInput @value={{@changeset.category}} @field={{"Charitable Purpose"}} /> --}}

    <PowerSelect @options={{this.purpose}} @selected={{@changeset.category}} @searchEnabled={{false}}
      @onChange={{fn (mut @changeset.category)}}
      @triggerClass={{"px-4 w-full text-gray-600 input bg-white border-gray-300 py-2 text-sm font mt-2"}}
      @dropdownClass={{"fonts"}} @placeholder={{"Charitable Purpose"}} as |purpose|>
      <span class="text-left list-item">{{purpose}}</span>
    </PowerSelect>
    <div>
    </div>
    <div class="flex mt-8 pb-6 justify-end">
      <div class="flex flex-col">
        <button type="submit" name="button"
          class="rounded-full bg-purple-500 text-white font-semibold py-2 px-4 rounded-full text-center pb-3 hover:shadow-lg flex w-full justify-between items-center focus:outline-none focus:shadow-outline"
          {{on "click" (fn @submit @changeset)}}> Continue <img src="/img/icons/ChevronWhite.svg"
            class="w-3 -rotate-90 transform ml-4" alt="continue"></button>
      </div>
    </div>
  </div>
</div>