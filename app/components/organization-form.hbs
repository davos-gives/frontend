<div class="w-3/5 organization">
  <div class="py-8 relative">
    <FormInput @value={{@changeset.name}} @field={{"Charity Name"}} />
    <p id="message">{{message}}</p>
    <SearchInput @value={{@changeset.address}} @field={{"Address"}} @changeset={{@changeset}} />
    <FormInput @value={{@changeset.charitableNumber}} @field={{"Registered Charitable Number"}} />
    <FormInput @value={{@changeset.nationbuilderId}} @field={{"Nation"}} />
    <p class="h-8 text-red-700 font-sm">
      {{#if @errors}}
      Problem Creating account.
      {{/if}}
    </p>


    <div>
    </div>
    <div class="flex mt-8 pb-6 justify-end">
      <div class="flex flex-col">
        <button type="submit" name="button"
          class="rounded-full bg-purple-500 text-white font-semibold py-2 px-4 rounded-full text-center pb-3 hover:shadow-lg flex w-full justify-between items-center focus:outline-none focus:shadow-outline {{if @changeset.isInvalid "opacity-50 cursor-not-allowed"}}"
          {{on "click" (fn @submit @changeset)}}> Connect to NationBuilder<img src="/img/icons/ChevronWhite.svg"
            class="w-3 -rotate-90 transform ml-4" alt="continue"></button>
      </div>
    </div>
  </div>
</div>