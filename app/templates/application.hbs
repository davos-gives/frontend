<div class="h-screen flex overflow-hidden bg-gray-100">
  <div class="flex">
    <AnimatedContainer class="bg-white flex-shrink-0 flex overflow-hidden">
      {{#animated-if this.opened use=this.transition duration=300}}
      <div class="flex flex-col ">

        <div class="flex items-center h-16 flex-shrink-0 px-6  justify-between">
          {{svg-jar "Davos_logo_fullcolour" class="w-32 mr-12"}}
          <button type="button" {{on "click" (fn this.shrinkMenu)}}>
            <svg class="h-6 w-6 cursor-pointer" stroke="currentColor" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
            </svg>
          </button>

        </div>
        <div class="h-0 flex-1 flex flex-col overflow-y-auto">
          <nav class="flex-1 px-4 py-4 bg-white">
            <LinkTo @route='index'
              class="group flex items-center px-2 py-3 text-sm leading-5 font-medium rounded-md focus:outline-none transition ease-in-out duration-150 text-gray-500 hover:text-purple-500 text-semibold">
              {{svg-jar "Home" class="w-4 fill-current mr-3"}}
              Receipt Centre
            </LinkTo>
            <LinkTo @route='receipts.new' class="group flex items-center px-2 py-3 text-sm leading-5 font-medium rounded-md focus:outline-none
              transition ease-in-out duration-150 text-gray-500 hover:text-purple-500 text-semibold">
              {{svg-jar "Receipts" class="w-4 fill-current mr-3"}}
              Receipt Builder
            </LinkTo>
            <LinkTo @route='donations'
              class="group flex items-center px-2 py-3 text-sm leading-5 font-medium rounded-md focus:outline-none transition ease-in-out duration-150 text-gray-500 hover:text-purple-500 text-semibold">
              {{svg-jar "Account" class="w-4 fill-current mr-3"}}
              Donations
            </LinkTo>
            <a href="#"
              class="group flex items-center px-2 py-3 text-sm leading-5 font-medium rounded-md focus:outline-none transition ease-in-out duration-150 text-gray-500 hover:text-purple-500 text-semibold">
              {{svg-jar "Account" class="w-4 fill-current mr-3"}}
              Account
            </a>
          </nav>
        </div>
      </div>

      {{else}}
      <div class="flex flex-col bg-white">

        <div class="flex flex-col items-center h-16 flex-shrink-0 px-3 bg-white justify-between pt-4 text-purple-900">
          {{svg-jar "Davos_icon" class="w-10 fill-current"}}
          <svg class="h-6 w-6 cursor-pointer" stroke="currentColor" fill="none" viewBox="0 0 24 24">
          </svg>
        </div>
        <div class="h-0 flex-1 flex flex-col overflow-y-auto">
          <nav class="flex-1 px-4 py-4 bg-white">
            <LinkTo @route='index'
              class="group flex items-center px-2 py-3 text-sm leading-5 font-medium rounded-md focus:outline-none transition ease-in-out duration-150 text-gray-500 hover:text-purple-500 text-semibold bg-white">
              {{svg-jar "Home" class="w-4 fill-current"}}
            </LinkTo>
            <LinkTo @route='receipts.new'
              class="group flex items-center px-2 py-3 text-sm leading-5 font-medium rounded-md focus:outline-none transition ease-in-out duration-150 text-gray-500 hover:text-purple-500 text-semibold">
              {{svg-jar "Receipts" class="w-4 fill-current"}}
            </LinkTo>
            <LinkTo @route='donations'
              class="group flex items-center px-2 py-3 text-sm leading-5 font-medium rounded-md focus:outline-none transition ease-in-out duration-150 text-gray-500 hover:text-purple-500 text-semibold">
              {{svg-jar "Account" class="w-4 fill-current mr-3"}}
            </LinkTo>
            <a href="#"
              class="group flex items-center px-2 py-3 text-sm leading-5 font-medium rounded-md focus:outline-none transition ease-in-out duration-150 text-gray-500 hover:text-purple-500 text-semibold">
              {{svg-jar "Account" class="w-4 fill-current"}}
            </a>
          </nav>
          <div class="bg-white flex justify-center pb-4">
            <button type="button" {{on "click" (fn this.growMenu)}}>
              <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
              </svg>
            </button>
          </div>
        </div>
      </div>
      {{/animated-if}}
    </AnimatedContainer>
  </div>
  <div class="flex flex-col w-0 flex-1 overflow-scroll">
    <div class="bg-purple-gradient pb-64">
      <div class="relative z-10 flex-shrink-0 flex h-16">
        <button type="button"
          class="px-4 border-r border-gray-200 text-gray-500 focus:outline-none focus:bg-gray-100 focus:text-gray-600 md:hidden">
          <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
          </svg>
        </button>
        <div class="flex-1 px-4 flex justify-between">
          <div class="flex-1 flex">
          </div>
          <div class="ml-4 flex items-center md:ml-6">
            <div class="ml-3 relative">
              <div>
                <button type="button" {{on "click" this.toggleMenu}}
                  class="inline-block no-underline text-white font-semibold text-sm align-middle capitalize focus:outline-none active:outline-none">
                  Ian Knauer
                </button>
              </div>
              {{#animated-if this.subMenuOpen}}
              <div class="origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg">
                <div class="py-1 rounded-md bg-white shadow-xs">
                  <a href="#"
                    class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition ease-in-out duration-150">Sign
                    out</a>
                </div>
              </div>
              {{/animated-if}}
            </div>
          </div>
        </div>
        <div class="max-w-7xl mx-auto pb-12 px-4 sm:px-6 lg:px-8">
        </div>
      </div>
    </div>
    <main class="-mt-64">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="ml-12">
          {{outlet}}
        </div>
        <section class="flex flex-wrap w-full mx-auto text-sm pt-8 container">
          <div class="w-1/3 text-grey-dark border-grey-light border-solid border-t text-purple-footer py-8">
            <p><span class="font-bold">Â©2020 Davos.gives</span> - All rights reserved.</p>
          </div>
          <div
            class="w-1/3 text-grey-dark text-center border-grey-light border-solid border-t py-6 -py-1 flex justify-center">
            <img src="/img/Davos_slogan.svg" class="w-32" alt="davos - give meaning">
          </div>

          <div class="w-1/3 text-right flex text-grey-dark border-grey-light border-solid border-t py-8 text-xs">
            <p class="w-1/3">
              Terms of Use
            </p>
            <p class="w-1/3">
              Privacy Policy
            </p>
            <p class="w-1/3">
              Cookie Policy
            </p>
          </div>
        </section>
      </div>
    </main>
  </div>
</div>