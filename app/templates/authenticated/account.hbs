<div class="bg-purple-gradient pb-64">
  <div class="relative z-10 flex-shrink-0 flex h-16">
    <button type="button"
      class="px-4 border-r border-gray-200 text-gray-500 focus:outline-none focus:bg-gray-100 focus:text-gray-600 md:hidden">
      <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
      </svg>
    </button>
    <div class="flex-1 px-4 flex justify-between">
      <div class="flex-1 flex">
      </div>
      <div class="ml-4 flex items-center md:ml-6">
        <div class="ml-3 relative">
          <div>
            <button type="button" {{on "click" this.toggleMenu}}
              class="inline-block no-underline text-white font-semibold text-sm align-middle capitalize focus:outline-none active:outline-none">
              Ian Knauer
            </button>
          </div>
          {{#animated-if this.subMenuOpen}}
          <div class="origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg">
            <div class="py-1 rounded-md bg-white shadow-xs">
              <a href="#"
                class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition ease-in-out duration-150"
                {{on "click" this.invalidateSession}}>Sign
                out</a>
            </div>
          </div>
          {{/animated-if}}
        </div>
      </div>
    </div>
    <div class="max-w-7xl mx-auto pb-12 px-4 sm:px-6 lg:px-8">
    </div>
  </div>
</div>
<main class="-mt-64">
  {{#with (changeset @model) as |organization|}}
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="ml-12">
      <div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
        <div class="md:grid md:grid-cols-3 md:gap-6 mb-12">
          <div class="md:col-span-1">
            <h3 class="text-lg font-medium leading-6 text-gray-900">User</h3>
            <p class="mt-1 text-sm leading-5 text-gray-500">
              This is the information about your account.
            </p>
          </div>
          <div class="mt-5 md:mt-0 md:col-span-2">
            <form action="#" method="POST">
              <div class="grid grid-cols-6 gap-6">
                <div class="col-span-6 sm:col-span-3">
                  <label for="first_name" class="block text-sm font-medium leading-5 text-gray-700">First name</label>
                  <Input id="first_name"
                    class="mt-1 form-input block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" />
                </div>

                <div class="col-span-6 sm:col-span-3">
                  <label for="last_name" class="block text-sm font-medium leading-5 text-gray-700">Last name</label>
                  <input id="last_name"
                    class="mt-1 form-input block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" />
                </div>
                <div class="col-span-6 sm:col-span-3">
                  <div class="col-span-3 sm:col-span-2">
                    <label for="company_website" class="block text-sm font-medium leading-5 text-gray-700">
                      Email
                    </label>
                    <div class="mt-1 flex rounded-md shadow-sm">
                      <input id="Email Address"
                        class="form-input flex-1 block w-full rounded-md transition duration-150 ease-in-out sm:text-sm sm:leading-5"
                        placeholder="info@davos.gives" />
                    </div>
                  </div>
                </div>
                <div
                  class="bg-white shadow-md bg-green-100 border-2 border-green-300 sm:rounded-lg col-span-6 sm:col-span-3 sm:col-start-1">
                  <div class="px-4 py-5 sm:p-6">
                    <h3 class="text-lg leading-6 font-medium text-green-900">
                      Active connection to your Nationbuilder account.
                    </h3>
                    <div class="mt-2 max-w-xl text-sm leading-5 text-green-700">
                      <p>
                        We require an authorized API key from your Nationbuilder account to tie transactions to
                        receipts.
                      </p>
                    </div>
                    <div class="mt-5 sm:flex sm:items-center">
                      <div class="max-w-xs w-full">
                        <label for="email" class="sr-only">Nation</label>
                        <div class="relative rounded-md shadow-sm">
                          <Input id="email" class="form-input block w-full sm:text-sm sm:leading-5"
                            @value={{organization.nationId}} placeholder="davosgives" />
                        </div>
                      </div>
                      <span class="mt-3 inline-flex rounded-md shadow-sm sm:mt-0 sm:ml-3 sm:w-auto">
                        <button type="button"
                          class="w-full inline-flex items-center justify-center px-4 py-2 border border-transparent font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition ease-in-out duration-150 sm:w-auto sm:text-sm sm:leading-5">
                          Connect
                        </button>
                      </span>
                    </div>
                  </div>
                </div>

              </div>
            </form>
          </div>
        </div>

        <div class="md:grid md:grid-cols-3 md:gap-6 mt-8 border-t border-gray-200 pt-12">
          <div class="md:col-span-1">
            <h3 class="text-lg font-medium leading-6 text-gray-900">Organization</h3>
            <p class="mt-1 text-sm leading-5 text-gray-500">
              Information about your charitable organization
            </p>
          </div>
          <div class="mt-5 md:mt-0 md:col-span-2">
            <form action="#" method="POST">
              <div class="grid grid-cols-6 gap-6">
                <div class="col-span-6 sm:col-span-3">
                  <label for="first_name" class="block text-sm font-medium leading-5 text-gray-700">Organization
                    Name</label>
                  <Input id="first_name" @value={{organization.name}}
                    class="mt-1 form-input block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" />
                </div>

                <div class="col-span-6 sm:col-span-3">
                  <label for="last_name" class="block text-sm font-medium leading-5 text-gray-700">Registered Charitable
                    Number</label>
                  <Input id="last_name" @value={{organization.charitableNumber}}
                    class="mt-1 form-input block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" />
                </div>

                <div class="col-span-6 sm:col-span-3">
                  <label for="country" class="block text-sm font-medium leading-5 text-gray-700">Country /
                    Region</label>
                  <select id="country"
                    class="mt-1 block w-full py-2 px-3 py-0 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5">
                    <option>Canada</option>
                    <option>United States</option>
                  </select>
                </div>


                <div class="col-span-6 sm:col-span-3">
                  <label for="country" class="block text-sm font-medium leading-5 text-gray-700">Charitable
                    Purpose</label>
                  <select id="country"
                    class="mt-1 block w-full py-2 px-3 py-0 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5">
                    <option>Religious</option>
                    <option>Environment</option>
                    <option>Education</option>
                    <option>Health</option>
                  </select>
                </div>


                <div class="col-span-4">
                  <label for="street_address" class="block text-sm font-medium leading-5 text-gray-700">Address
                    1</label>
                  <Input id="street_address" @value={{organization.address1}}
                    class="mt-1 form-input block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" />
                </div>

                <div class="col-span-1">
                  <label for="street_address" class="block text-sm font-medium leading-5 text-gray-700">Address
                    2</label>
                  <Input id="street_address" @value={{organization.address2}}
                    class="mt-1 form-input block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" />
                </div>

                <div class="col-span-6 sm:col-span-6 lg:col-span-2">
                  <label for="city" class="block text-sm font-medium leading-5 text-gray-700">City</label>
                  <Input id="city" @value={{organization.city}}
                    class="mt-1 form-input block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" />
                </div>

                <div class="col-span-6 sm:col-span-3 lg:col-span-2">
                  <label for="state" class="block text-sm font-medium leading-5 text-gray-700">Province</label>
                  <Input id="state" @value={{organization.province}}
                    class="mt-1 form-input block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" />
                </div>

                <div class="col-span-6 sm:col-span-3 lg:col-span-2">
                  <label for="postal_code" class="block text-sm font-medium leading-5 text-gray-700">Postal</label>
                  <Input id="postal_code" @value={{organization.postalCode}}
                    class="mt-1 form-input block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" />
                </div>
              </div>
            </form>
          </div>
        </div>
        <div class="mt-8 border-t border-gray-200 pt-5">
          <div class="flex justify-end">
            <span class="inline-flex rounded-md shadow-sm">
              <button type="button"
                class="py-2 px-4 border border-gray-300 rounded-md text-sm leading-5 font-medium text-gray-700 hover:text-gray-500 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:bg-gray-50 active:text-gray-800 transition duration-150 ease-in-out">
                Cancel
              </button>
            </span>
            <span class="ml-3 inline-flex rounded-md shadow-sm">
              <button type="submit"
                class="inline-flex justify-center py-2 px-4 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out">
                Save
              </button>
            </span>
          </div>
        </div>
      </div>
    </div>
    <section class="flex flex-wrap w-full mx-auto text-sm pt-8 container">
      <div class="w-1/3 text-grey-dark border-grey-light border-solid border-t text-purple-footer py-8">
        <p><span class="font-bold">©2020 Davos.gives</span> - All rights reserved.</p>
      </div>
      <div
        class="w-1/3 text-grey-dark text-center border-grey-light border-solid border-t py-6 -py-1 flex justify-center">
        <img src="/img/Davos_slogan.svg" class="w-32" alt="davos - give meaning">
      </div>

      <div class="w-1/3 text-right flex text-grey-dark border-grey-light border-solid border-t py-8 text-xs">
        <p class="w-1/3">
          Terms of Use
        </p>
        <p class="w-1/3">
          Privacy Policy
        </p>
        <p class="w-1/3">
          Cookie Policy
        </p>
      </div>
    </section>
  </div>
  {{/with}}
</main>